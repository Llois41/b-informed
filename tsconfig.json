{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "build/js",
    "noUnusedLocals": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "typeRoots": ["src/@types"],
    "types": []
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/.*.js",
    "**/*.mjs",
    "**/*.json",
    "**/*.vue",
  ]
}
